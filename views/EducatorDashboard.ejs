        <div class="box">
            <div class="container">
                <form action="/EducatorDashboard" method="post">
                    <div class="top-text">
                        <h1>Add new Course</h1>
                        <!-- <p class="hi-message">Welcom new Member</p> -->
                    </div>
                    <!-- CourseName input field -->
                    <div class="CourseName">
                        <label for="CourseName">Course Name</label>
                        <input type="text" id="CourseName" name="CourseName" >
                    </div>
                    <!-- Password input field -->
                    <div class="description">
                        <label for="description">Description</label>
                        <input type="text" id="description" name="description">
                    </div>
                    <div class="tags">
                        <label for="tags">tags</label>
                        <% for(let i=0; i<5;i++){ %>
                        <input type="text" id="tags" name="tags" placeholder="tag name">
                        <% } %>
                    </div>
                    <div class="paid-course" style="cursor:pointer">
                        <label for="paidContent" >Paid Course</label>
                        <input type="checkbox" id="paidContent" name="paidContent">
                    </div>
                   <div class="content">
                    <div class="Video row">
                        <label for="Video col-12">Video</label>
                        <% for(let i=0; i<5;i++){ %>
                        <input class="col-5" type="text" id="Video" name="Video" placeholder="name" >
                        <input class="col-5" type="text" id="Video" name="VideoUrl" placeholder="url">
                        <% } %>
                    </div>
                    <div class="articles row">
                        <label for="articles col-12">Articles</label>
                        <% for(let i=0; i<5;i++){ %>
                        <input  class="col-5"  type="text" id="articles" name="article" placeholder="name">
                        <input  class="col-5"  type="text" id="articles" name="articlesUrl" placeholder="url">
                        <% } %>
                    </div>
                    <div class="quizzes row">
                        <label for="quizzes col-12">Quizzes</label>
                        <% for(let i=0; i<5;i++){ %>
                        <input  class="col-5" type="text" id="quizzes" name="quizzes" placeholder="name">
                        <input  class="col-5" type="text" id="quizzes" name="quizzesUrl" placeholder="url">
                        <% } %>
                    </div>
                    <div class="assignments row">
                        <label for="assignments col-12">Assignments</label>
                        <% for(let i=0; i<5;i++){ %>
                        <input  class="col-5" type="text" id="assignments" name="assignments" placeholder="name">
                        <input  class="col-5" type="text" id="assignments" name="assignmentsUrl" placeholder="url">
                        <% } %>
                    </div>
                    <div class="others row">
                        <label for="others col-12">Others</label>
                        <% for(let i=0; i<5;i++){ %>
                        <input  class="col-5" type="text" id="others" name="others" placeholder="name">
                        <input  class="col-5" type="text" id="others" name="othersUrl" placeholder="url">
                        <% } %>
                    </div>
                   </div>
                    <button class="button-style">Insert</button>
                    
                </form>
            </div>
        </div>
