    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="/libs/sweetalert2.min.css">
    <!-- Icon -->
    <link rel="icon" type="image/x-icon" href="/assets/imgs/logo-min.svg">
    <!-- CSS  -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/login.css">
        <title>STEMREF | Register Page</title>
</head>
<body>
    <main>
        <% if(typeof data !== 'undefined'){%>
            <% if(typeof data.err!== 'undefined'){ %>
                <script type="module">
                    Swal.fire({
                        title: 'Error!',
                        text: '<%= data.err %>',
                        icon: 'error',
                        confirmButtonText: 'Ok',
                        customClass: {
                            confirmButton: 'button-style'
                          }
                      }) 
                </script>
            <% } } %>
        <%- include('partials/header.ejs') %>
        <div class="box">
            <div class="container">
                <form action="/register" method="post">
                    <div class="top-text">
                        <h1><%= t('Register') %></h1>
                        <p class="hi-message"><%= t('LOGINPAGE.Welcome new Member') %></p>
                    </div>
                    <!-- Username input field -->
                    <div class="username">
                        <input type="text" id="username" name="username"  required>
                        <label for="username"><%= t('LOGINPAGE.Username') %></label>
                    </div>
                    <!-- Password input field -->
                    <div class="password">
                        <input type="password" id="password" name="password" required>
                        <label for="password"><%= t('LOGINPAGE.Password') %></label>
                    </div>
                    <div class="email password">
                        <input type="email" id="email" name="email" required>
                        <label for="email"><%= t('LOGINPAGE.Email') %></label>
                    </div>
                    <!-- <a href="/pages/search.html">Login</a> -->
                    <button class="button-style"><%= t('Register') %></button>
                    <div class="seprator">
                        <span><%= t('or') %></span>
                    </div>
                    <div class="Oauth-items">
                        <!-- <i class="fa-brands fa-google"></i>
                        <i class="fa-brands fa-linkedin"></i>
                        <i class="fa-brands fa-github"></i> -->
                        <img src="/assets/imgs/google.svg" alt="google">
                        <img src="/assets/imgs/linkedin.svg" alt="linkedin">
                        <img src="/assets/imgs/github.svg" alt="github">

                    </div>
                </form>
            </div>
        </div>
    </main>
    <footer class="text-center w-100">
        <p>Created by <a href="https://github.com/A222moq3e/STEMREF/" target="_blank">STEMREF Team</a></p>
     </footer>

    <div class="waves" ></div>
    <!-- Bootstrap JS -->
    <script src="/libs/bootstrap.min.js"></script>
    <!-- SweetAlert2 JavaScript -->
    <script src="/libs/sweetalert2.all.min.js"></script>
    <!-- font awesome Library -->
    <script src="/libs/all.min.js"> </script>
    <script src="/js/main.js"></script>


</body>
</html> 