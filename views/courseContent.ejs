<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta http-equiv="Content-Security-Policy" content="default-src *; img-src * data:; style-src * 'unsafe-inline'; font-src *; script-src * 'unsafe-inline' 'unsafe-eval';">    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;500;700;900&family=Tulpen+One&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/bootstrap.min.css"> 
    <!-- font awesome Library -->
    <link rel="stylesheet" href="/all.css"> 
    <link rel="stylesheet" href="/all.min.css"> 
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="/sweetalert2.min.css">
    <!-- Icon -->
    <link rel="icon" type="image/x-icon" href="/logo-min.svg">
    <!-- CSS  -->
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/courseContent.css">
        <title>STEMREF | Course Content Page</title>
  </head>
  <body>
    <main>
      
        <nav class="navbar navbar-expand-lg navbar-dark p-lg-4 p-md-4"   style="background-color: #232323;">
            <div class="container">
              <a class="navbar-brand" href="/"><img class="logo" src="/logo.svg" alt="logo"></a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mb-2 mb-lg-0  w-100  align-items-center">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/search">Search</a></li>
                    <li class="nav-item"><a class="nav-link" href="/pricing">Pricing</a></li>

                    <div class="dropstart ms-md-auto">
                        <button class="btn dropdown-toggle d-flex justify-content-center align-items-center h-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                          <img src="/avatars/avatar3.svg" class="rounded-circle navbar-user-avatar " style="width: 50px;">
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarAvatarDropdown">
                        <a class="dropdown-item disabled" href="/">Hi <%= data.user.name %></a>
                        <a class="dropdown-item" href="/profile">Profile</a>
                        <a class="dropdown-item" href="https://twitter.com/intent/tweet?url=http://129.151.139.163/&text=you+search+for+whatever+learning+matirial+here&hashtags=STEMREF" target="_blank">Refer to friends</a>
                        <a class="dropdown-item" href="mailto:moq3e2000@gmail.com">Give Feedback</a>
                        <a class="dropdown-item" href="/signout">Signout <i class="fa-solid fa-arrow-right-from-bracket"></i></a>
                    </div>
                    
                  
                </ul>
            
              </div>
            </div>
          </nav>
          
        <div class="overlap">

          <div class="container">

            <div class="box">
              <div class="motivation-img">
                <img src="/undraw_mathematics_-4-otb.svg" alt="img">
              </div>
              <div class="descritpion" >
                <h2>Description</h2>
                <p><%= data.course.description %></p>
                <!-- <h2>Tags:</h2>
                <div class="description-tags">
                  <% for(let tag of data.course.tags){ %>
                    <div class="tag"><%= tag %></div>
                  <% } %>
                </div> -->
                

              </div>
              <% if(Array.isArray(data.course.content)){ %>
                <a class="fa-solid fa-arrow-left" style="color: white;" href="/courseContent/<%=data.course.name%>"></a>
                <% } %>
                
          <div class="top-text">
              <h1><%= data.course.name %><span><%= data.catograySearch %></span></h1>

            <div class="tags">
                <div class="tag">course</div>
                <!-- <div class="tag">CS205</div> -->
                <% for(let tag of data.course.tags){ %>
                  <div class="tag"><%= tag %></div>
                <% } %>
            </div>
            <div class="rating">
              
              <% if(data.course.reviews){ %>
                <i class="fa-solid fa-star active "></i>
                <% for(let i=0;i<data.course.reviews;i++){ %>
                  hi
                <% }  %>
              <% }  %>

              <% if(!data.course.reviews){ %>
                <i class="fa-solid fa-star"></i> No Rating
              <% } %>
            </div>
          </div>
          <div class="items">
            <% if(!data.catograySearch) { %>
              <% for(const [key, value] of Object.entries(data.course.content)){ %>
                <a class="item" href="<%= data.course.name +'/'+key %>"  title="<%= key %>">
                  <div class="item-title"><%= key %>  <i class="<%= data.icons[key]%>"></i></div>
                  <i class="fa-solid fa-chevron-down fa-rotate-270"></i>
                </a>          
              <% } } %>
            <% if(data.catograySearch){ %>
                <% for(let {name, url} of data.course.content[data.catograySearch]){ %>
                    <a class="item" href="<%= url %>" target="_blank"  title="<%= name %>">
                      <div class="item-title"><%= name %><i class="<%= data.icons[data.catograySearch]%>"></i></div>
                      <i class="fa-solid fa-chevron-down fa-rotate-270"></i>
                    </a>          
                  <% }  %>
            <% } %>
            <div class="discussionBox row hide">
              <div class="discussions col-12">
                <div class="message">not work</div>
              </div>
                <div class="message-tools input-group mb-3">
                  <input type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
                  <div class="input-group-prepend">
                    <button class="btn btn-outline-secondary" type="button"><i class="fa-solid fa-paper-plane"></i></button>
                  </div>
                </div>
            </div>
            </div>
            <div class="tools">
              <button title="Review"><i class="fa-solid fa-star btn" onclick="document.querySelector('.stars').classList.toggle('hide')"></i></button>
              <div class="stars hide">
                <input type="radio" name="start" id="star1" data-num-star="5"><label for="star1"><i class="fa-solid fa-star"></i></label>
                <input type="radio" name="start" id="star2" data-num-star="4"><label for="star2"><i class="fa-solid fa-star"></i></label>
                <input type="radio" name="start" id="star3" data-num-star="3"><label for="star3"><i class="fa-solid fa-star"></i></label>
                <input type="radio" name="start" id="star4" data-num-star="2"><label for="star4"><i class="fa-solid fa-star"></i></label>
                <input type="radio" name="start" id="star5" data-num-star="1"><label for="star5"><i class="fa-solid fa-star"></i></label>
              </div>
              <button title="Discussion" onclick="document.querySelector('.discussionBox').classList.toggle('hide')"><i class="fa-solid fa-message btn"></i></button>
            </div>
      
            <!-- <div class="reviewBox">

            </div> -->
          </div>
        </div>
      </div>
    </main>
    <!-- Bootstrap JS -->
   <script src="/bootstrap.min.js"></script>
    <!-- SweetAlert2 JavaScript -->
    <script src="/sweetalert2.all.min.js"></script>
    <script src="/main.js" type="module"></script>
    <script src="/courseContent.js"></script>

    <div class="waves" ></div>
  </body>
</html>
