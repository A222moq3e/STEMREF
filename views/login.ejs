        <title>STEMREF | Login Page</title>
</head>
<body>
    <main>
        <nav class="navbar navbar-expand-lg navbar-dark p-lg-4 p-md-4"   style="background-color: #232323;">
            <div class="container">
              <a class="navbar-brand" href="/"><img class="logo" src="./logo.svg" alt="logo"></a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent"  style="background-color: #232323;">
                <ul class="navbar-nav mb-2 mb-lg-0 w-100">
                  <li class="nav-item"><a class="nav-link" aria-current="page" href="/">Home</a></li>
                  <li class="nav-item active  ms-auto"><a class="nav-link" href="/login">Login</a></li>
                  <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
                </ul>
            
              </div>
            </div>
          </nav>
        <div class="box">
            <div class="container">
                <form action="/login" method="post">
                    <div class="top-text">
                        <h1>Login</h1>
                        <p class="hi-message">Glad you are back :)</p>
                    </div>
                    <!-- Username input field -->
                    <div class="username">
                        <input type="text" id="username" name="username"  required>
                        <label for="username">Username</label>
                    </div>
                    <!-- Password input field -->
                    <div class="password">
                        <input type="password" id="password" name="password" required>
                        <label for="password">Password</label>
                        <i class="fa-solid fa-eye eye"></i>
                        <i class="fa-solid fa-eye-slash eye"></i>
                    </div>
                    <div class="remember">
                        <label for="remb">Remember me</label>
                        <input type="checkbox" name="remb" id="remb">
                    </div>
                    <a href="/forget">Forget Password?</a>
                    <!-- <a href="/register">Don't have Account?</a> -->
                    <button class="button-style">Login</button>
                    <div class="seprator">
                        <span>or</span>
                    </div>
                    <div class="Oauth-items">
                        <!-- <i class="fa-brands fa-google"></i>
                        <i class="fa-brands fa-linkedin"></i>
                        <i class="fa-brands fa-github"></i> -->
                        <img src="/google.svg" alt="google">
                        <img src="/linkedin.svg" alt="linkedin">
                        <img src="/github.svg" alt="github">

                    </div>
                </form>
            </div>
        </div>
    </main>
      <!-- Bootstrap JS -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
