    <script src="/sweetalert2.all.min.js"></script>
    <!-- <div class="waves"></div> -->
    <script>
        if(document.querySelector('.get-started-click'))
        document.querySelector('.get-started-click').addEventListener('click',()=>{
            window.location.href='/register'; 
        })
        if(document.querySelector('.lets-learn-click'))
        document.querySelector('.lets-learn-click').addEventListener('click',()=>{
            window.location.href='/search'; 
        })

    </script>

    <script src="/main.js"></script>
</body>
